---
import ButtonDark from "../buttons/Button-dark.astro";
import ButtonLight from "../buttons/Button-light.astro";
---

<main class="bg-white">
  <div class="md:max-w-[1200px] mx-auto">
    <ul class="flex flex-wrap text-xl gap-4 items-center justify-center p-6">
      <li>Todos</li>
      <li>Entradas</li>
      <li class="border-b-4 border-dotted border-black">Almuerzos</li>
      <li>Cenas</li>
      <li>Bebidas</li>
      <li>Postres</li>
      <li>Frutas</li>
    </ul>
  </div>
  <div class="max-w-[1200px] mx-auto pb-10">
    <div class="flex gap-4 m-4">
      <div class="relative">
        <img
          src="assets/images/portfolio1.webp"
          alt="portfolio1"
          class="fliter brightness-50 rounded-xl shadow-xl"
        />
        <div class="absolute top-0 gap-28 md:gap-0 flex flex-col justify-between py-4">
          <h3 class="text-center text-white font-bold leading-none md:text-6xl">
            Premium Deep Sea Snow White Cod Fillet
          </h3>
          <p class="text-center text-white font-bold leading-none">
            Launch - Dinner
          </p>
        </div>
      </div>
      <div class="relative">
        <img
          src="assets/images/portfolio2.webp"
          alt="portfolio2"
          class="fliter brightness-50 rounded-xl shadow-xl"
        />
        <div class="absolute top-0 gap-16 md:gap-0 flex flex-col justify-between md:place-content-end md:h-full py-4">
          <h3 class="text-center text-white font-bold leading-none md:text-6xl">
            Option of natural wine available
          </h3>
          <p class="text-center text-white font-bold leading-none">
            Postres - Almuerzos - Cenas
          </p>
        </div>
      </div>
    </div>
    <div class="flex gap-4 m-4">
      <div class="relative">
        <img
          src="assets/images/portfolio3.webp"
          alt="portfolio3"
          class="fliter brightness-50 rounded-xl shadow-xl"
        />
        <div class="absolute top-0 gap-16 md:gap-4 flex flex-col justify-between py-4">
          <h3 class="text-center text-white md:text-6xl font-bold leading-none px-2">
            Best pumpkin for pumpkin soup
          </h3>
          <p class="text-center text-white font-bold leading-none">
            Almuerzos - Entradas
          </p>
        </div>
      </div>
      <div class="relative">
        <img
          src="assets/images/portfolio4.webp"
          alt="portfolio4"
          class="fliter brightness-50 rounded-xl shadow-xl"
        />
        <div class="absolute top-0 gap-28 md:gap-0 flex flex-col justify-between md:place-content-end md:h-full py-4">
          <h3 class="text-center md:text-6xl text-white font-bold leading-none">
            Strip Steak With Rosemary Butter
          </h3>
          <p class="text-center text-white font-bold leading-none">
            Almuerzos - Cenas
          </p>
        </div>
      </div>
    </div>
    <div class="flex gap-4 m-4">
      <div class="relative">
        <img
          src="assets/images/portfolio5.webp"
          alt="portfolio1"
          class="fliter brightness-50 rounded-xl shadow-xl"
        />
        <div class="absolute top-0 gap-20 md:gap-0 flex flex-col justify-between py-4">
          <h3 class="text-center md:text-6xl text-white font-bold leading-none">
            Braised Sliced Abalone,Fish Maw with Premium Seafood
          </h3>
          <p class="text-center text-white font-bold leading-none">
            Entradas - Almuerzos
          </p>
        </div>
      </div>
      <div class="relative">
        <img
          src="assets/images/portfolio6.webp"
          alt="portfolio2"
          class="fliter brightness-50 rounded-xl shadow-xl"
        />
        <div class="absolute top-0 gap-24 md:gap-4 flex flex-col justify-between md:place-content-end md:h-full py-4">
          <h3 class="text-center md:text-6xl text-white font-bold leading-none md:px-4">
            Pan Fried Live Prawn with Superior Soy Sauce
          </h3>
          <p class="text-center text-white font-bold leading-none">
            Almuerzos - Cenas
          </p>
        </div>
      </div>
    </div>
    <div class="w-full mx-auto">
      <p class="text-center pt-4">Loading...</p>
    </div>
  </div>
</main>
