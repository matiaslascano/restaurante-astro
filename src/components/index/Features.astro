---
import { features } from "../../constants";
---

<main class="bg-white w-full">
  <div
    class="grid grid-cols-1 md:grid-cols-3 place-items-center text-center py-6 md:px-20 md:max-w-[1200px] md:mx-auto md:py-20"
  >
    {
      features.map((feature) => (
        <div class="flex flex-col gap-4 my-4">
          <img
            src={feature.icon}
            alt="icono de feature"
            class="stroke-black w-[80px] md:w-[100px] md:h-[100px] mx-auto bg-gris2/30 rounded-full p-2"
          />
          <h3 class="text-2xl">{feature.name}</h3>
          <p>{feature.description}</p>
        </div>
      ))
    }
  </div>
</main>
